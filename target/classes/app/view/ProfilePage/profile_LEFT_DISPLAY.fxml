<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="820.0" prefWidth="469.0" style="-fx-background-color: #67B2B7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.profileDisplayController">
   <children>
      <VBox alignment="CENTER" prefHeight="820.0" prefWidth="468.0" spacing="25.0">
         <children>
            <ImageView fx:id="imageUrl" fitHeight="271.0" fitWidth="380.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/user_8742495.png" />
               </image>
            </ImageView>
            <Hyperlink fx:id="editImageID" alignment="CENTER" onAction="#setProfileImage" prefHeight="45.0" prefWidth="144.0" style="-fx-underline: true;" text="Edit Image" textFill="#d31034">
               <font>
                  <Font name="PT Sans Bold" size="25.0" />
               </font>
            </Hyperlink>
            <Label fx:id="nameLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="45.0" prefWidth="330.0" text="Name LastName">
               <font>
                  <Font name="SansSerif Bold" size="34.0" />
               </font>
            </Label>
            <Label fx:id="majorLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="45.0" prefWidth="329.0" text="Major">
               <font>
                  <Font name="SansSerif Bold" size="34.0" />
               </font>
            </Label>
            <Label fx:id="dormLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="45.0" prefWidth="329.0" text="Dormitory">
               <font>
                  <Font name="SansSerif Bold" size="34.0" />
               </font>
            </Label>
            <Label fx:id="emailLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="45.0" prefWidth="329.0" text="Bilkent Mail">
               <font>
                  <Font name="SansSerif Bold" size="34.0" />
               </font>
            </Label>
            <Label fx:id="descriptionLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="45.0" prefWidth="329.0" text="Biography">
               <font>
                  <Font name="SansSerif Bold" size="34.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</Pane>
