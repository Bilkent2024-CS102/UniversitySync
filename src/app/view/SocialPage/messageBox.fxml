<VBox prefHeight="669.0" prefWidth="860.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.SocialMessageBoxController">
   <children>
      <ScrollPane prefHeight="592.0" prefWidth="860.0">
         <content>
            <VBox fx:id="MessageBoxVBox_ID" prefHeight="912.0" prefWidth="838.0" spacing="30.0" style="-fx-background-color: #D3D3D3;">

              <!-- here it puts our each message text-->

            </VBox>
         </content>
      </ScrollPane>
      <HBox prefHeight="58.0" prefWidth="797.0" spacing="40.0" style="-fx-background-color: skyblue;">
