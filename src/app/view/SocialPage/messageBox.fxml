            <TextField fx:id="typeMessageTextfield_ID" onAction="#sendText" prefHeight="48.0" prefWidth="700.0" promptText="type message here" style="-fx-background-radius: 20;">
               <font>
                  <Font size="16.0" />
               </font>
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </TextField>
         </children>
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
         <padding>
            <Insets left="70.0" />
         </padding>
      </HBox>
   </children>
