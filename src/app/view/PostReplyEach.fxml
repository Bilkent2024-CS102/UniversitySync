        <VBox alignment="CENTER" prefHeight="342.0" prefWidth="296.0" style="-fx-background-color: grey;">
            <children>
              
                <ImageView fx:id="postReplyUserImage_ID" fitHeight="241.0" fitWidth="240.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@icons/icon-monochrome.png" />
                    </image>
                </ImageView>
            </children>
        </VBox>
        <VBox prefHeight="373.0" prefWidth="1323.0" style="-fx-background-color: #67B2B7;">
