                <HBox alignment="CENTER" prefHeight="61.0" prefWidth="1295.0" spacing="20.0" style="-fx-background-color: #4B8990;">
                    <children>
                       <!-- fx:id="postReplyUsername_ID"-->
                        <Label fx:id="postReplyUsername_ID" prefHeight="61.0" prefWidth="1115.0" text="Musa on 3-01-2022">
